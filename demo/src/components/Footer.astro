---
import ZorroSvg from "../icons/zorro.svg";
---

<footer
    class="mx-auto w-full max-w-[1392px] px-6 py-8 bg-gradient-to-r from-gray-800 via-gray-500 to-gray-400 text-white rounded-t-lg shadow-lg"
>
    <div
        class="flex flex-col md:flex-row justify-between items-center gap-6 md:gap-0"
    >
        {/* Logo y texto principal */}
        <div class="flex items-center gap-4">
            <ZorroSvg class="w-16 h-16 text-astro-red" />
            <div>
                <p class="font-extrabold text-3xl flex items-center gap-3">
                    Hecho en <span class="text-astro-red">China</span>
                    <span
                        class="rounded-full bg-astro-red px-3 py-1 text-xl font-semibold shadow-lg"
                        >2025</span
                    >
                </p>
                <p class="uppercase font-light text-gray-300 mt-1">
                    @Jhonix{" "}
                    <a
                        href="https://github.com/withastro/astro"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="underline hover:text-astro-red transition-colors duration-300"
                    >
                        
                    </a>
                </p>
            </div>
        </div>
    </div>
    {/* LÃ­nea separadora */}
    <div
        class="border-t border-gray-700 mt-8 pt-4 text-center text-gray-500 text-sm select-none"
    >
        &copy; {new Date().getFullYear()} Todos los derechos reservados.
    </div>
</footer>
